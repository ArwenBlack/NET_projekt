
@{
    ViewBag.Title = "Main_view";
}

<div class="container">
    <div class="row justify-content-evenly">
        <div class="col-4">
            <div class="fs-3">
                Wirtualizacja danych bez logowania
            </div>

            <label for="myfile"> Wybierz plik:</label>
            <input type="file" id="myfile" name="myfile">

        </div>
        <div class="col-4">

            <div class="fs-3">
                Wirtualizacja przykładowych danych
            </div>
            <div class=" text-center">
                <div class="row justify-content-center">
                    <div class="col-4">
                        <div class="form-check">

                            <input type="checkbox" class="form-check-input" id="ecg">
                            <label class="form-check-label" for="ecg" >ECG</label>
                            
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="emg">
                            <label class="form-check-label" for="emg", value ="1">EMG</label>
                        </div>
                    </div>
                </div>
                <select class="custom-select"
                        style="width:250px;">
                    <option>10HZ</option>
                    <option>100Hz</option>
                    <option>250Hz</option>
                </select>
                <select class="custom-select"
                        style="width:250px;">
                    <option>10 s</option>
                    <option>20 s</option>
                    <option>30 s</option>
                </select>
                <button type="button" class="btn btn-outline-secondary btn-sm btn-block r">Generuj wykres</button>
            </div>
        </div>

    </div>







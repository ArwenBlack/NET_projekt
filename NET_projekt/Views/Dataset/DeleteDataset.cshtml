@model NET_projekt.Models.Dataset

@{
    ViewBag.Title = "Delete Dataset";
}

<h3>Jesteś pewien usunięcia wybranego dataset'u?</h3>
<h4>Operacja ta jest nieodwracalna.</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.DatasetName):
        </dt>
        <dd>
            @Html.DisplayFor(m => m.DatasetName)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.DateAdded):
        </dt>
        <dd>
            @Html.DisplayFor(m => m.DateAdded)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.DatasetHzFrequency):
        </dt>
        <dd>
            @Html.DisplayFor(m => m.DatasetHzFrequency) [Hz]
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
